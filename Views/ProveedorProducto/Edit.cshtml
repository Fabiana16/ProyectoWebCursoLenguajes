@model ProyectoWebCursoLenguajes.Models.ProveedorProducto

@{
    ViewData["Title"] = "Modificar Proveedor-Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Modificar Proveedor-Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="idProveedor" class="control-label">ID del Proveedor</label>
                <input asp-for="idProveedor" class="form-control" />
                <span asp-validation-for="idProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idProducto" class="control-label">ID del Proveedor</label>
                <input asp-for="idProducto" class="form-control" />
                <span asp-validation-for="idProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

