@model IEnumerable<ProyectoWebCursoLenguajes.Models.Usuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle de Usuarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                <a type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Edit" asp-route-id="@item.idUsuario">Modificar</a> |
                <a type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Details" asp-route-id="@item.idUsuario">Detalles</a> |
                <a type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Delete" asp-route-id="@item.idUsuario">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
