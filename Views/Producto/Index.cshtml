@model IEnumerable<ProyectoWebCursoLenguajes.Models.Producto>

@{
    ViewData["Title"] = "Incio de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Inicio</h1>
<hr />
<p>
    <a type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Create">Crear Nuevo Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codigoBarra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precioCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.porcentajeImpuesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unidadMedida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codigoBarra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.porcentajeImpuesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidadMedida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.categoria)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.foto)
            </th>
            <td>
                <a type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Edit" asp-route-id="@item.idProducto">Modificar</a> |
                <a type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Details" asp-route-id="@item.idProducto">Detalles</a> |
                <a type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Delete" asp-route-id="@item.idProducto">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
