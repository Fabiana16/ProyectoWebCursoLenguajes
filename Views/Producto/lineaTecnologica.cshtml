@model IEnumerable<ProyectoWebCursoLenguajes.Models.Producto>

    @{
        ViewData["Title"] = "Linea Tecnológica";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<head>
    <meta charset="utf-8" />

</head>


<body>
    <!-- Jumbotron -->
    <div class="jumbotron p-0">

        <!-- Card image -->
        <div class="view overlay rounded-top">
            <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(134).jpg" class="img-fluid" alt="Sample image">
            <a href="#">
                <div class="mask rgba-white-slight"></div>
            </a>
        </div>

        <!-- Card content -->
        <div class="card-body text-center mb-3">

            <!-- Title -->
            <h3 class="card-title h3 my-4"><strong>Card title</strong></h3>
            <!-- Text -->
            <p class="card-text py-2">Some quick example text to build on the card title and make up the bulk of the card's</p>
            <!-- Button -->
            <a href="#" class="btn purple-gradient btn-rounded mb-4">Button</a>

        </div>

    </div>
    <!--<!-- Jumbotron -->
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                if (item.categoria == "Linea Tecnologica")
                {
                    <!--card-->
                    <!--Section: Content-->
                    <div class="col-lg-3 col-md-6 mb-4">
                        <!-- Section heading -->
                        <h3 class="font-weight-bold mb-4 pb-2">Our bestsellers</h3>
                        <!-- Section description -->
                        <p class="grey-text w-responsive mx-auto mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit fugit, error amet numquam iure provident voluptate esse quasi nostrum quisquam eum porro a pariatur veniam.</p>

                        <!-- Grid row -->
                        @*<div class="row">*@

                        <!-- Grid column -->
                        <!-- Card -->
                        <div class="card ">
                            <!-- Card image -->
                            <div>
                                <img src=@Html.DisplayFor(a => item.foto) class="card-img-top"
                                     alt="sample photo">

                            </div>
                            <!-- Card image -->
                            <!-- Card content -->
                            <div class="card-body card-body-cascade text-center pb-3">
                                <!-- Title -->
                                <h5 class="card-title mb-1">
                                    <strong>
                                        <a href="">@Html.DisplayFor(a => item.descripcion)</a>
                                    </strong>
                                </h5>
                                <!-- Description -->
                                <p class="card-text">
                                    Neque porro quisquam est, qui dolorem ipsum quia dolor sit.
                                </p>
                                <!-- Card footer -->
                                <div class="card-footer">

                                    <span class="float-center">
                                        <a class="btn btn-dark btn-sm mr-1 mb-2" asp-area="" asp-controller="Venta" asp-action="anadirCarrito" asp-route-id="@item.idProducto">
                                            <i class="fa fa-shopping-cart grey-text pr-2"></i>
                                        </a>
                                        <a href="#" role="button" class="btn btn-light" data-toggle="modal" data-target="#P-@item.idProducto">
                                            <i class="fa fa-info-circle pr-2"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>

                            <!-- Card content -->
                        </div>

                        <!-- Card -->
                    </div><!--column-->
                    <!-- Grid column -->
                    @*</div>*@
                    <!-- Grid row -->
                }

            }<!--for-->


        </div><!--row-->
    </div><!--container-->
    <!-- Button trigger modal -->


    @foreach (var item in Model)
    {
        if (item.categoria == "Linea Tecnologica")
        {
            <!-- Modal -->
            <div id="P-@item.idProducto" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <strong>
                                <a href="">@Html.DisplayFor(a => item.descripcion)</a>
                            </strong>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }


</body>
    
