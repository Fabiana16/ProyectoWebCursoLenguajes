@model IEnumerable<ProyectoWebCursoLenguajes.Models.Producto>

    @{
        ViewData["Title"] = "Linea Tecnológica";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<head>
    <meta charset="utf-8" />

</head>


<body>
    <div class="jumbotron text-center hoverable p-4" style="background-color:#D8FBFF">

        <!-- Grid row -->
        <div class="row">

            <!-- Grid column -->
            <div class="col-md-4 offset-md-1 mx-3 my-3">

                <!-- Featured image -->
                <div class="view overlay">
                    <img src="~/css/img/Linea Tecnologica.png" class="img-fluid" alt="LineaTEcnologica">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

            </div>
            <!-- Grid column -->
            <!-- Grid column -->
            <div class="col-md-7 text-md-left ml-3 mt-3">



                <h4 class="h4 mb-4">En Distribuidora del Pacífico de ofrecemos excelentes productos a un precio inigualable</h4>
                <hr />

                <p class="font-weight-normal">
                    <strong>Tu casa es nuestra prioridad, confía en los que saben</strong>
                    <br />
                    Recuerda que al adquirir productos de nuestra tienda puedes obtener descuentos increíbles 10% descuento para la compra entre 3 a 6 productos,
                    15% para la compra entre 7 a 9 productos, 20% para la compra entre 10 a 12 productos y 25% para la compra de más 13 productos.
                    <br />
                    <strong>***OFERTA VÁLIDA SOLAMENTE EN PAGOS CON EFECTIVO***</strong>
                </p>


            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->

    </div>
    <!-- News jumbotron -->
    <br />
    <br />
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                if (item.categoria == "Linea Tecnologica")
                {
                    <!--card-->
                    <!--Section: Content-->
                    <div class="col-lg-3 col-md-6 mb-4">

                        <!-- Grid row -->
                        @*<div class="row">*@

                        <!-- Grid column -->
                        <!-- Card -->
                        <div class="card ">
                            <!-- Card image -->
                            <div>
                                <img src=@Html.DisplayFor(a => item.foto) class="card-img-top"
                                     alt="sample photo">

                            </div>
                            <!-- Card image -->
                            <!-- Card content -->
                            <div class="card-body card-body-cascade text-center pb-3">
                                <!-- Title -->
                                <h5 class="card-title mb-1">
                                    <strong>
                                        <a href="">@Html.DisplayFor(a => item.descripcion)</a>
                                    </strong>
                                </h5>
                                <!-- Description -->
                                <p class="card-text">
                                    Neque porro quisquam est, qui dolorem ipsum quia dolor sit.
                                </p>
                                <!-- Card footer -->
                                <div class="card-footer">
                                    <div class="alert alert-success">
                                        <span class="float-center">

                                            <a type="button" class="boton" asp-area="" asp-controller="Venta" asp-action="anadirCarrito" asp-route-id="@item.idProducto">
                                                <i class="fa fa-shopping-cart grey-text pr-2"></i>

                                            </a>
                                        </span>
                                    </div>

                                    <br />
                                    <br />
                                    <span class="float-center">
                                        <a href="#" class="boton" data-toggle="modal" data-target="#P-@item.idProducto">
                                            <i class="fa fa-info-circle pr-2"></i>
                                        </a>
                                    </span>

                                </div>
                            </div>

                            <!-- Card content -->
                        </div>

                        <!-- Card -->
                    </div><!--column-->
                    <!-- Grid column -->
                    @*</div>*@
                    <!-- Grid row -->
                }

            }<!--for-->


        </div><!--row-->
    </div><!--container-->
    <!-- Button trigger modal -->


    @foreach (var item in Model)
    {
        if (item.categoria == "Linea Tecnologica")
        {
            <!-- Modal -->
            <div id="P-@item.idProducto" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <strong>
                                <a href="">@Html.DisplayFor(a => item.descripcion)</a>
                            </strong>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }


</body>
    
