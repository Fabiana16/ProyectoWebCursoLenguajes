@model ProyectoWebCursoLenguajes.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Estás seguro que quieres eliminar este producto?</h3>
<hr />
<div>
    <h4>Detalle del Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.codigoBarra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.codigoBarra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precioCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precioCompra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.porcentajeImpuesto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.porcentajeImpuesto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.unidadMedida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.unidadMedida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precioVenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precioVenta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.foto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.foto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idProducto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la Lista</a>
    </form>
</div>
