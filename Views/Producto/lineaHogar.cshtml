@model IEnumerable<ProyectoWebCursoLenguajes.Models.Producto>

    @{
        ViewData["Title"] = "Linea Hogar";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <head>
        <meta charset="utf-8" />

    </head>


    <body>
        <!-- Jumbotron -->
        <div class="jumbotron text-center hoverable p-4" style="background-color:#D8FBFF">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-4 offset-md-1 mx-3 my-3">

                    <!-- Featured image -->
                    <div class="view overlay">
                        <img src="~/css/img/Linea Hogar.png" class="img-fluid" alt="LineaHogar">
                        <a>
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>

                </div>
                <!-- Grid column -->
                <!-- Grid column -->
                <div class="col-md-7 text-md-left ml-3 mt-3">

                    <!-- Excerpt -->

                    <h4 class="h4 mb-4">En Distribuidora del Pacífico de ofrecemos excelentes productos a un precio inigualable</h4>
                    <hr />
                    <p class="font-weight-normal">
                        <strong>Tu casa es nuestra prioridad, confía en los que saben</strong>
                        Recuerda que al adquirir productos de nuestra tienda puedes obtener descuentos increíbles 10% descuento para la compra entre 3 a 6 productos,
                        15% para la compra entre 7 a 9 productos, 20% para la compra entre 10 a 12 productos y 25% para la compra de más 13 productos.
                        <br />
                        <strong>***OFERTA VÁLIDA SOLAMENTE EN PAGOS CON EFECTIVO***</strong>
                    </p>

                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row -->

        </div>
        <!--<!-- Jumbotron -->
        <br />
        <br />
        <div class="container">
            <div class="row">

                @foreach (var item in Model)
                {
                    if (item.categoria == "Linea Hogar")
                    {
                        <!--card-->
                        <!--Section: Content-->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <!-- Grid row -->
                            @*<div class="row">*@

                            <!-- Grid column -->
                            <!-- Card -->
                            <div class="card card-cascade narrower card-ecommerce">
                                <!-- Card image -->
                                <div>
                                    <img src=@Html.DisplayFor(a => item.foto) class="card-img-top"
                                         alt="sample photo">
                                </div>
                                <!-- Card image -->
                                <!-- Card content -->
                                <div class="card-body card-body-cascade text-center pb-3">
                                    <!-- Title -->
                                    <p>
                                        <div>
                                            <a>@Html.DisplayFor(a => item.descripcion)</a>
                                        </div>
                                        <div>
                                            <a>₡@Html.DisplayFor(a => item.precioVenta)</a>
                                        </div>
                                    </p>
                                    <!-- Description -->
                                    <p class="card-text">

                                    </p>
                                    <!-- Card footer -->
                                    <div class="card-footer px-1">
                                        <span class="float-center">
                                            <a type="button" class="boton" asp-area="" asp-controller="Venta" asp-action="anadirCarrito" asp-route-id="@item.idProducto">
                                                <i class="fa fa-shopping-cart grey-text pr-2"></i>
                                            </a>
                                        </span>
                                        <br />
                                        <br />
                                        <span class="float-center">
                                            <a href="#" class="boton" data-toggle="modal" data-target="#P-@item.idProducto">
                                                <i class="fa fa-info-circle pr-2"></i>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                                <!-- Card content -->
                            </div>
                            <!-- Card -->
                        </div><!--column-->
                        <!-- Grid column -->
                        @*</div>*@
                        <!-- Grid row -->
                    }
                }
            </div><!--m5-->
        </div>
        <!--foreach-->

        @foreach (var item in Model)
        {
            if (item.categoria == "Linea Hogar")
            {
                <!-- Modal -->
                <div id="P-@item.idProducto" class="modal" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Detalles del producto</h5>

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    Código de barra:
                                    <a href="">@Html.DisplayFor(a => item.codigoBarra)</a>
                                    <hr />
                                </p>
                                <p>
                                    Descripción del producto:
                                    <a>@Html.DisplayFor(a => item.descripcion)</a>
                                    <hr />
                                </p>
                                <p>
                                    Estado del producto:
                                    <a>@Html.DisplayFor(a => item.estado)</a>
                                    <hr />
                                </p>
                                <p>
                                    Precio del producto:
                                    <a>@Html.DisplayFor(a => item.precioVenta)</a>
                                    <hr />
                                </p>
                                <p>
                                    Porcentaje de impuesto:
                                    <a>@Html.DisplayFor(a => item.porcentajeImpuesto)</a>

                                </p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            </div> @*boton*@
                        </div>
                    </div>
                </div>
            }
        }
    </body>
