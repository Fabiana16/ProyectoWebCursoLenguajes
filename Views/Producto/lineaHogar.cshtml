@model IEnumerable<ProyectoWebCursoLenguajes.Models.Producto>

    @{
        ViewData["Title"] = "Linea Hogar";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <head>
        <meta charset="utf-8" />

    </head>


    <body>
        <!-- Jumbotron -->
        <div class="jumbotron p-0">

            <!-- Card image -->
            <div class="view overlay rounded-top">
                <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(134).jpg" class="img-fluid" alt="Sample image">
                <a href="#">
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>

            <!-- Card content -->
            <div class="card-body text-center mb-3">

                <!-- Title -->
                <h3 class="card-title h3 my-4"><strong>Card title</strong></h3>
                <!-- Text -->
                <p class="card-text py-2">Some quick example text to build on the card title and make up the bulk of the card's</p>
                <!-- Button -->
                <a href="#" class="btn purple-gradient btn-rounded mb-4">Button</a>

            </div>

        </div>
        <!--<!-- Jumbotron -->
        <div class="container">
            <div class="row">

                @foreach (var item in Model)
                {
                    if (item.categoria == "Linea Hogar")
                    {
                        <!--card-->
                        <!--Section: Content-->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <!-- Grid row -->
                            @*<div class="row">*@

                            <!-- Grid column -->
                            <!-- Card -->
                            <div class="card card-cascade narrower card-ecommerce">
                                <!-- Card image -->
                                <div>
                                    <img src=@Html.DisplayFor(a => item.foto) class="card-img-top"
                                         alt="sample photo">
                                </div>
                                <!-- Card image -->
                                <!-- Card content -->
                                <div class="card-body card-body-cascade text-center pb-3">
                                    <!-- Title -->
                                    <p>
                                        <div>
                                            <a>@Html.DisplayFor(a => item.descripcion)</a>
                                        </div>
                                        <div>
                                            <a>₡@Html.DisplayFor(a => item.precioVenta)</a>
                                        </div>
                                    </p>
                                    <!-- Description -->
                                    <p class="card-text">
                                        
                                    </p>
                                    <!-- Card footer -->
                                    <div class="card-footer px-1">
                                        <span class="float-center">

                                            <button type="button" class="btn btn-primary btn-sm mr-1 mb-2">
                                                <i class="fa fa-shopping-cart grey-text pr-2"></i>
                                            </button>
                                            <button type="button" class="btn btn-light btn-sm mr-1 mb-2">
                                                <i class="fa fa-info-circle pr-2"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <!-- Card content -->
                            </div>
                            <!-- Card -->
                        </div><!--column-->
                        <!-- Grid column -->
                        @*</div>*@
                        <!-- Grid row -->
                    }
                }
            </div><!--m5-->
        </div>
        <!--foreach-->
    </body>
