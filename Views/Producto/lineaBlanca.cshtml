@model IEnumerable<ProyectoWebCursoLenguajes.Models.Producto>

    @{
        ViewData["Title"] = "Linea Blanca";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <head>
        <meta charset="utf-8" />

    </head>


    <body>
        <!-- News jumbotron -->
        <div class="jumbotron text-center hoverable p-4" style="background-color:#D8FBFF">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-4 offset-md-1 mx-3 my-3">

                    <!-- Featured image -->
                    <div class="view overlay">
                        <img src="~/css/img/Linea Blanca.png" class="img-fluid" alt="LineaBlanca">
                        <a>
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>

                </div>
                <!-- Grid column -->
                <!-- Grid column -->
                <div class="col-md-7 text-md-left ml-3 mt-3">

                    <!-- Excerpt -->

                    <h4 class="h4 mb-4">En Distribuidora del Pacífico de ofrecemos excelentes productos a un precio inigualable</h4>

                    <p class="font-weight-normal">
                        Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque, totam
                        rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae
                        dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur.
                    </p>
                    <p class="font-weight-normal">by <a><strong>Carine Fox</strong></a>, 19/08/2016</p>

                    <a href="" type="button" class="btn-l"> Ver SubTotal</i> 
                    </a>

                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row -->

        </div>
        <!-- News jumbotron -->
        <!--<!-- Jumbotron -->
        @*inicio de card*@
        <div class="container">
            <div class="row">

                @foreach (var item in Model)
                {
                    if (item.categoria == "Linea Blanca")
                    {
                        <!--card-->
                        <!--Section: Content-->
                        <div class="col-lg-3 col-md-6 mb-4">
                            <!-- Section heading -->
                            <h3 class="font-weight-bold mb-4 pb-2">Our bestsellers</h3>
                            <!-- Section description -->
                            <p class="grey-text w-responsive mx-auto mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit fugit, error amet numquam iure provident voluptate esse quasi nostrum quisquam eum porro a pariatur veniam.</p>

                            <!-- Grid row -->
                            @*<div class="row">*@

                            <!-- Grid column -->
                            <!-- Card -->
                            <div class="card card-cascade narrower card-ecommerce">
                                <!-- Card image -->
                                <div>
                                    <img src=@Html.DisplayFor(a => item.foto) class="card-img-top"
                                         alt="sample photo">

                                </div>
                                <!-- Card image -->
                                <!-- Card content -->
                                <div class="card-body card-body-cascade text-center pb-3">
                                    <!-- Title -->
                                    <h5 class="card-title mb-1">
                                        <strong>
                                            <a href="">@Html.DisplayFor(a => item.descripcion)</a>
                                        </strong>
                                    </h5>
                                    <!-- Description -->
                                    <p class="card-text">
                                        Neque porro quisquam est, qui dolorem ipsum quia dolor sit.
                                    </p>
                                    <!-- Card footer -->
                                    <div class="card-footer px-1">

                                        <span class="float-center">


                                            <button type="button" class="btn btn-primary btn-sm mr-1 mb-2">
                                                <i class="fa fa-shopping-cart grey-text pr-2"></i>
                                            </button>
                                            <button type="button" class="btn btn-light btn-sm mr-1 mb-2">
                                                <i class="fa fa-info-circle pr-2"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <!-- Card content -->
                            </div>
                            <!-- Card -->
                        </div><!--column-->
                        <!-- Grid column -->
                        @*</div>*@
                        <!-- Grid row -->
                    }
                }


            </div><!--m5-->
        </div>
        <!--foreach-->
    </body>
