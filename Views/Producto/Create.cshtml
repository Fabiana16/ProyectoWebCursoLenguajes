@model ProyectoWebCursoLenguajes.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Producto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form type="button" class="btn btn-primary btn-sm mr-1 mb-2" asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-group">
                <label asp-for="codigoBarra" class="control-label">Código de Barra</label>
                <input asp-for="codigoBarra" class="form-control" />
                <span asp-validation-for="codigoBarra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label">Descripción</label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioCompra" class="control-label">Precio de Compra</label>
                <input asp-for="precioCompra" class="form-control" />
                <span asp-validation-for="precioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="porcentajeImpuesto" class="control-label">Porcentaje Impuesto</label>
                <select asp-for="porcentajeImpuesto" class="form-control">
                    <option value="">Escoja una opcion...</option>
                    <option value="0.0">Exento</option>
                    <option value="0.13">Impuesto IVA</option> 
                </select>
                <span asp-validation-for="porcentajeImpuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="unidadMedida" class="control-label">Unidad de Medida</label>
                <input asp-for="unidadMedida" class="form-control" />
                <span asp-validation-for="unidadMedida" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="estado" class="control-label">Estado</label>
                <select asp-for="estado" class="form-control">
                    <option value="">Escoja una opcion...</option>
                    <option value="A">Activo</option>
                    <option value="I">Inactivo</option>
                </select>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="categoria" class="control-label">Categoría</label>
                <select asp-for="categoria" class="form-control">
                    <option value="">Escoja una opcion...</option>
                    <option value="Linea Blanca">Línea Blanca</option>
                    <option value="Linea Hogar">Línea Hogar</option>
                    <option value="Linea Tecnologica">Línea Tecnológica</option>
                    <option value="Abarrotes">Abarrotes</option>
                    <option value="NuevoProducto">Nuevo producto</option>
                </select>
                <span asp-validation-for="categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="foto" class="control-label">Foto</label>
                <input asp-for="foto" class="form-control" name="files" type="file" />
                <span asp-validation-for="foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
