<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Distribuidora del Pacifico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <header>
    </header>

    <div id="demo" class="carousel slide" data-ride="carousel">

        @*Indicators*@
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
            <li data-target="#demo" data-slide-to="4"></li>
        </ul>
        @*The slideshow*@
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/css/img/Linea Blanca.png" alt="Blanca" width="1100" height="100">
            </div>
            <div class="carousel-item">
                <img src="~/css/img/Linea Hogar.png" alt="Hogar" width="1100" height="100">
            </div>
            <div class="carousel-item">
                <img src="~/css/img/Linea Tecnologica.png" alt="Tecnologica" width="1100" height="100">
            </div>
            <div class="carousel-item">
                <img src="~/css/img/Abarrotes.png" alt="Abarrotes" width="1100" height="100">
            </div>
        </div>
        @*Left and right controls*@
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
   
    <div class="jumbotron jumbotron-fluid" style="background-color:aliceblue">
        <div class="container">
           
            <img src="~/css/img/bannerIndex.png" alt="bannerIndex">
            <hr class="my-4">
            <h2>
                Contamos con diferentes formas de pago para tu compra.
            </h2>
            <a class="btn btn-primary btn-lg" href="#" role="button">Ir arriba</a>
        </div>
    </div>
</body>
 </html>
