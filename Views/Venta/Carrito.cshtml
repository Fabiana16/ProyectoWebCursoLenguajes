@model List<ProyectoWebCursoLenguajes.Models.Carrito>


@{
    ViewData["Title"] = "Carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carrito de Compras</h1>

<div class="mb-3">
    <div class="pt-4">



    </div>
</div>

@*FOR para mostrar la lista de productos de Carrito*@
@using (Html.BeginForm("Carrito", "Venta", FormMethod.Post))
{

    @for (int i = 0; i < Model.Count; i++)
    {
        
        <div class="row mb-4">
            <div class="col-md-5 col-lg-3 col-xl-3">
                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                    <img class="img-fluid w-100"
                         src=@Html.DisplayFor(modelItem => Model[i].foto) alt="Sample">

                </div>
            </div>
            <div class="col-md-7 col-lg-9 col-xl-9">
                <div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5> @Html.DisplayFor(modelItem => Model[i].descripcion)</h5>
                            <p class="mb-3 text-muted text-uppercase small">Codigo:  @Html.DisplayFor(modelItem => Model[i].idProducto)</p>
                            
                        
                        </div>
                        <div>

                            <div class="def-number-input number-input safari_only mb-0 w-100">
                                @Html.TextBox("productos[" + @i + "].unidadMedida", Model[i].unidadMedida)
                            </div>
                            <small id="passwordHelpBlock" class="form-text text-muted text-center">
                                Cantidad seleccionadas
                            </small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>

                            <a asp-action="DeleteConfirmed" asp-controller="Venta" asp-route-id="@Model[i].idProducto" type="button" class="btn btn-info btn-lg card-link-secondary small text-uppercase mr-3">
                                <i class="fa fa-trash"></i>
                            </a>

                        </div>
                        <p class="mb-0"><span><strong id="summary"> @Html.DisplayFor(modelItem => Model[i].precioCompra)</strong></span></p>
                    </div>
                </div>
            </div>
        </div>
        
    } @*Fin del FOR para mostrar la lista de productos de Carrito*@


    <input type="submit" name="Aceptar y continuar" value="Aceptar y continuar" class="btn btn-dark btn-lg waves-effect" />
}@*fin del formulario*@

